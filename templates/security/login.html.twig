{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block header %}
	{# Empty block needed to remove default_header #}
{% endblock %}
{% block footer %}
	{# Empty block needed to remove default_footer #}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center vh-100">
			<div class="col-12 col-md-6 col-lg-4">

				<div class="card">
					<div class="card-body">
						<h1 class="h3 mb-3">{{'Please sign in'|trans}}</h1>
						{{ component('flashes') }}
						<form method="post">

							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}


							<label for="inputEmail" class="form-label">{{'Email'|trans}}</label>
							<input type="email" value="" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required>
							<label for="inputPassword" class="form-label">{{'Password'|trans}}</label>
							<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

							<div class="form-check mb-3">
								<label class="form-check-label">
									<input class="form-check-input" type="checkbox" name="_remember_me">
									{{'Remember me'|trans}}
								</label>
							</div>

							<div class="row justify-content-between align-items-center">
								<div class="col-auto">
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<button class="btn btn-primary" type="submit">
										{{'Sign in'|trans}}
									</button>
								</div>
								<div class="col-auto">
									<a href="{{ path('app_register') }}">{{'Register'|trans}}</a>
								</div>
							</div>
						</form>
						<p class="mt-3 mb-0">{{'Â© 2022 Company, Inc. All rights reserved.'|trans}}</p>

					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
