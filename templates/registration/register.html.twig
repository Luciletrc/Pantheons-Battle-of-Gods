{% extends "layouts/base.html.twig" %}

{% block title %}Register
{% endblock %}

{% block header %}
	{# Empty block needed to remove default_header #}
{% endblock %}
{% block footer %}
	{# Empty block needed to remove default_footer #}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center vh-100">
			<div class="col-12 col-md-6 col-lg-4">

				<div class="card">
					<div class="card-body">
						<h1 class="h3 mb-3">Please register</h1>


						{{ component('flashes') }}
						{% if isLogged %}
							{% else %}
								{{ form_start(registrationForm) }}
								{{ form_row(registrationForm.email) }}
								{# {{ form_row(registrationForm.pseudo) }} #}
								{{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
								{{ form_row(registrationForm.agreeTerms) }}

								<div class="row justify-content-between align-items-center">
									<div class="col-auto">
										<button type="submit" class="btn btn-primary">Register</button>
									</div>
									<div class="col-auto">
										<a href="{{path('app_login')}}">Log in</a>
									</div>
								</div>

								{{ form_end(registrationForm) }}
						{% endif %}

						<p class="mt-3 mb-0">Â© 2022 Company, Inc. All rights reserved.</p>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
