{% extends "layouts/base.html.twig" %}

{% block title %}
	{{'Register'|trans}}
	- Titouan Thd
{% endblock %}

{% block header %}
	{# Empty block needed to remove default_header #}
{% endblock %}
{% block footer %}
	{# Empty block needed to remove default_footer #}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center vh-100">
			<div class="col-12 col-md-6 col-lg-4">

				<div class="card">
					<div class="card-body">
						<h1 class="h3 mb-3">{{'Please register'|trans}}</h1>
						{{ component('flashes') }}
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email, { label: 'Email'|trans }) }}
						{{ form_row(registrationForm.plainPassword, { label: 'Password'|trans, attr: {autocomplete: 'username'} }) }}
						{{ form_row(registrationForm.agreeTerms, { label: 'Agree terms'|trans }) }}

						<div class="row g-2 justify-content-between align-items-center">
							<div class="col-12">
								<button type="submit" class="btn btn-primary">{{'Register'|trans}}</button>
							</div>
							<div class="col-12">
								<a href="{{path('app_login')}}" class="me-2">{{'Log in'|trans}}</a>
								<a href="{{ path('app_home') }}">{{'Back to home'|trans}}</a>
							</div>
						</div>

						{{ form_end(registrationForm) }}

						<p class="mt-3 mb-0">{{'Â© 2022 Company, Inc. All rights reserved.'|trans}}</p>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
