{% extends 'layouts/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="banniere">
        <div class="banniere-content">
            CONTACT
        </div>
    </div>
    <div class="container container-info text-center">
        <h3 class="p-4">Vous avez des questions sur le jeu ? Vous souhaitez l'obtenir ? <br/><br/>Contactez-nous ici :</h3>
    </div>
    <div class="container contact-form">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        <form id="contactForm" method="POST">
            <div class="mb-3 d-flex gap-2">
                <input type="text" class="form-control" name="name" placeholder="Nom" label="Nom" required>
                <input type="text" class="form-control" name="firstname" placeholder="Prenom" label="Prenom" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="Email" label="Email" required>
            </div>
            <div class="radio-form">
                <div class="form-check">
                    <br/><h5 class="text-center">Quelle boîte possédez-vous ?</h5><br/>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Grec VS Mésopotamiens">
                    <label class="form-check-label">Grec VS Mésopotamiens</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Egyptien VS Slave">
                    <label class="form-check-label">Egyptien VS Slave</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Les deux">
                    <label class="form-check-label">Les deux !</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Je n'ai pas encore le jeu" checked>
                    <label class="form-check-label">Je n'ai pas encore le jeu</label>
                </div><br/>
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="message" rows="3" placeholder="Écrivez votre message..." label="Message" required></textarea>
            </div>
            <button type="submit" class="btn text-center text-white" label="Envoyer">Envoyer</button>
        </form>
    </div>
{% endblock %}
